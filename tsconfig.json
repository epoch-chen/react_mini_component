{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "outDir": "lib",
    "sourceMap": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": ["dom", "es7"],
    "module": "commonjs",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "include": ["./src/**/*"]
}
